<!DOCTYPE html>
<html>
  <head>
    <title>Homepage</title>
    <% include partials/style-links.ejs%>
</head>
  <body class="container bodybackground">
    <% include partials/header.ejs%>
    <% include partials/user-navigation.ejs%>
    <% include partials/site-navigation.ejs%>
    <div class="maincontent">
      <main class="width50">
        <form action="/profile/signin" method="POST">
            <label for="username">User Name</label>
            <input type="text" id="username" name="username" placeholder="Your email.."><br>
        
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Your password.."><br>

            <input type="submit" value="Login" class="button">
            <% if(error!=''){ %>
            <div class="loginerror">
                <%= error %>
            </div>
            <% } %>
        </form>
      </main>
      <% include partials/footer.ejs%>
      </div>
    </body>
  </html>